                         {name: "Marina", type: "Boarding"}, {name: "Georgi", type: "Day"}, {name: "Georgia", type: "Boarding"},
                         {name: "Petar", type: "Day"}, {name: "Nikolai", type: "Boarding"}, {name: "Mateja", type: "Day"},
