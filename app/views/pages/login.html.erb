<% content_for :title, "Login - English Class by Florina Pricop" %>
<% content_for :description, "Access your secure English class materials and resources." %>

<div class="container-fluid min-vh-100 d-flex align-items-center justify-content-center" style="background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%); margin-top: -70px; padding-top: 70px;">
  <div class="row w-100 justify-content-center">
    <div class="col-12 col-md-6 col-lg-4">
      <div class="card shadow-lg border-0 rounded-3">
        <div class="card-body p-5">
          <!-- Header -->
          <div class="text-center mb-4">
            <div class="mb-3">
              <div class="bg-primary rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                <svg class="text-white" width="24" height="24" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 1L3 5v6c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V5l-9-4z"/>
                </svg>
              </div>
            </div>
            <h2 class="fw-bold text-dark mb-2">Welcome Back</h2>
            <p class="text-muted">Enter your password to access class materials</p>
          </div>

          <!-- Password Form -->
          <%= form_with url: login_path, method: :post, local: true, html: { class: "needs-validation", novalidate: true } do |form| %>
            <div class="mb-4">
              <%= form.label :password, "Password", class: "form-label fw-semibold" %>
              <%= form.password_field :password, 
                  class: "form-control form-control-lg", 
                  placeholder: "Enter your password",
                  required: true,
                  autocomplete: "current-password" %>
              <div class="invalid-feedback">
                Please enter your password.
              </div>
            </div>

            <!-- Error Message -->
            <% if flash[:alert] %>
              <div class="alert alert-danger mb-4" role="alert">
                <svg class="me-2" width="16" height="16" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-2h2v2zm0-4h-2V7h2v6z"/>
                </svg>
                <%= flash[:alert] %>
              </div>
            <% end %>

            <!-- Submit Button -->
            <%= form.submit "Access Class Materials", 
                class: "btn btn-primary btn-lg w-100 fw-semibold",
                style: "background: linear-gradient(135deg, #1e40af 0%, #3b82f6 100%); border: none;" %>
          <% end %>

          <!-- Additional Info -->
          <div class="text-center mt-4">
            <p class="text-muted small mb-2">
              <svg class="me-1" width="14" height="14" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 1L3 5v6c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V5l-9-4z"/>
              </svg>
              Secure access to your learning materials
            </p>
            <%= link_to "← Back to Home", root_path, 
                class: "text-decoration-none fw-semibold",
                style: "color: #1e40af;" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Form Validation Script -->
<% content_for :javascript do %>
<%= javascript_include_tag 'home', defer: true %>

<% end %>